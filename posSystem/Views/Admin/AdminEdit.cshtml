@model AdminModel;
@{

}

<div class="container">
    <div class="card o-hidden border-0 shadow-lg col-lg-7 mx-auto">
        <div class="card-body p-7">
            <!-- Nested Row within Card Body -->
            <div>
                <div class="col-lg-10 mx-auto">
                    <!-- Centering the column horizontally -->
                    <div class="p-9">
                        <div class="text-center mb-4">
                            <h1 class="h4 text-gray-900">Create an Account!</h1>
                        </div>
                        <form class="user">
                            <div class="form-group">
                                <input type="text" class="form-control form-control-user" id="adminName" placeholder="Admin Name" value="@Model.adminName">
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control form-control-user" id="adminEmail" placeholder="Email Address" value="@Model.adminEmail">
                            </div>
                            <div class="form-group">
                                <span id="emailFeedback"></span>
                            </div>
@*                             <div class="form-group row">
                                <div class="col-sm-6">
                                    <input type="password" class="form-control form-control-user" id="adminPassword" placeholder="Password" oninput="validatePassword()">
                                </div>
                                <div class="col-sm-6">
                                    <input type="password" class="form-control form-control-user" id="confirmPassword" placeholder="Repeat Password" oninput="validatePassword()">
                                </div>
                            </div>
                            <div class="form-group">
                                <span style="margin-bottom: 1em; color: red;" id="error-message"></span>
                            </div> *@
                            <hr>
                            <div class="text-center">
                                <button type="button" class="btn btn-primary btn-user btn-block" id="btnUpdate">
                                    Update Admin Account
                                </button>
                            </div>
                            <hr>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>

        $(document).ready(function () {
            $('#adminEmail').on('input', function () {
                let adminEmail = $('#adminEmail').val();

                if (adminEmail) {
                    $.ajax({
                        url: "/Admin/Check",
                        data: { email: adminEmail },
                        type: "POST",
                        dataType: "json",
                        success: function (response) {
                            if (response.isEmailRegistered) {
                                $('#emailFeedback').text("This email is already registered").css("color", "red");
                            } else {
                                $('#emailFeedback').text("This email is available").css("color", "green");
                            }
                        },
                        error: function (errormessage) {
                            console.log(errormessage.responseText);
                        }
                    });
                } else {
                    $('#emailFeedback').text("");
                }
            });

            $('#btnUpdate').click(function () {
                let id = '@Model.id.ToString()';
                let adminName = $('#adminName').val();
                let adminEmail = $('#adminEmail').val();

                let _reqModel = {
                    id: id,
                    adminName: adminName,
                    adminEmail: adminEmail,
                };

                $.ajax({
                    url: "/Admin/Update",
                    data: _reqModel,
                    type: "POST",
                    dataType: "json",
                    success: function (result) {
                        console.log(result);
                        if (result.IsSuccess) {
                            Swal.fire({
                                title: "Success!",
                                text: result.responeMessage,
                                icon: "success",
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    location.href = "/Admin";
                                }
                            });
                        } else {
                            Swal.fire({
                                title: "Error!",
                                text: result.responeMessage,
                                icon: "error"
                            });
                        }
                    },
                    error: function (errormessage) {
                        console.log(errormessage.responseText);
                    }
                });
            });
        });
    </script>
}